{% extends "base.html.twig" %}

{% block title %} {{ parent() }} Erreur 404 {% endblock %}

{% block css %} <link rel='stylesheet' href='css/error.css'> {% endblock %}
       
{% block content %} 
    <div class="error-container error-404">
        <div class="floating">
            <svg width="200" height="200" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M20 12C20 16.4183 16.4183 20 12 20C7.58172 20 4 16.4183 4 12C4 7.58172 7.58172 4 12 4C16.4183 4 20 7.58172 20 12Z" stroke-width="1.5"/>
                <path d="M12 14V15M12 9V12" stroke-width="1.5" stroke-linecap="round"/>
                <path d="M10.1904 3L4.00004 4.5M13.8096 3L19.9999 4.5" stroke-width="1.5" stroke-linecap="round"/>
                <path d="M10.1904 21L4.00004 19.5M13.8096 21L19.9999 19.5" stroke-width="1.5" stroke-linecap="round"/>
                <circle cx="12" cy="12" r="10" stroke-width="1.5" stroke-dasharray="1 3"/>
            </svg>
        </div>
        <div class="error-code">404</div>
        <h2>Page Non Trouvée</h2>
        <p class="error-message">
            La page que vous recherchez semble avoir disparu dans l'espace.
            <br>Elle a peut-être été déplacée, renommée ou n'a jamais existé.
        </p>
        <div class="error-actions">
            <a href="index.php" class="error-button">
                Retour à l'accueil
            </a>
            <a href="javascript:history.back()" class="error-button outline-button">
                Page précédente
            </a>
        </div>
        <div class="coordinates">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 6V12L16 14" stroke="#64748b" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                <circle cx="12" cy="12" r="9" stroke="#64748b" stroke-width="1.5"/>
            </svg>
            Coordonnées galactiques : 404.NeptuneHostel.local
        </div>
    </div>
{% endblock %}