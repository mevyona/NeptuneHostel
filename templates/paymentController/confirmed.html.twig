{% extends "base.html.twig" %}

{% block title %} {{ parent() }} Confirmation de réservation {% endblock %}

{% block css %} 
    {{ parent() }} 
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <style>
        .confirmation-container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 2rem;
            background-color: white;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        }
        
        .confirmation-header {
            text-align: center;
            margin-bottom: 2rem;
        }
        
        .confirmation-header h1 {
            color: #5E75C9;
            margin-bottom: 0.5rem;
            font-size: 1.8rem;
        }
        
        .confirmation-icon {
            font-size: 4rem;
            color: #28a745;
            margin-bottom: 1.5rem;
        }
        
        .confirmation-details {
            margin: 2rem 0;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            padding: 1.5rem;
        }
        
        .confirmation-details h2 {
            font-size: 1.4rem;
            margin-bottom: 1.5rem;
            color: #333;
            border-bottom: 2px solid #f8f9fa;
            padding-bottom: 0.5rem;
        }
        
        .detail-group {
            display: flex;
            margin-bottom: 1rem;
        }
        
        .detail-label {
            flex: 0 0 30%;
            font-weight: 600;
            color: #495057;
        }
        
        .detail-value {
            flex: 0 0 70%;
            color: #212529;
        }
        
        .confirmation-actions {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            margin-top: 2rem;
            justify-content: center;
        }
        
        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            padding: 0.75rem 1.5rem;
            font-size: 1rem;
            font-weight: 500;
            border-radius: 8px;
            text-decoration: none;
            transition: all 0.3s ease;
        }
        
        .btn-primary {
            background-color: #5E75C9;
            color: white;
        }
        
        .btn-primary:hover {
            background-color: #4c61b8;
            box-shadow: 0 4px 8px rgba(94, 117, 201, 0.3);
            transform: translateY(-2px);
        }
        
        .btn-secondary {
            background-color: #6c757d;
            color: white;
        }
        
        .btn-secondary:hover {
            background-color: #5a6268;
            box-shadow: 0 4px 8px rgba(108, 117, 125, 0.3);
            transform: translateY(-2px);
        }
        
        .payment-status {
            display: inline-block;
            padding: 0.5rem 1rem;
            border-radius: 50px;
            font-weight: 600;
            font-size: 0.85rem;
            margin-top: 1rem;
        }
        
        .status-confirmed {
            background-color: rgba(40, 167, 69, 0.15);
            color: #28a745;
        }
        
        .invoice-download {
            margin-top: 2rem;
            text-align: center;
            padding: 1.5rem;
            background-color: #f8f9fa;
            border-radius: 8px;
        }
        
        @media (max-width: 768px) {
            .detail-group {
                flex-direction: column;
            }
            
            .detail-label {
                margin-bottom: 0.25rem;
            }
        }
    </style>
{% endblock %}
       
{% block content %} 
<div class="confirmation-container">
    <div class="confirmation-header">
        <div class="confirmation-icon">
            <i class="bi bi-check-circle-fill"></i>
        </div>
        <h1>Réservation confirmée!</h1>
        <p>Votre réservation a été enregistrée avec succès. Merci pour votre confiance.</p>
        <div class="payment-status status-confirmed">
            Paiement confirmé
        </div>
    </div>
    
    <div class="confirmation-details">
        <h2>Détails de votre réservation</h2>
        
        <div class="detail-group">
            <div class="detail-label">Chambre:</div>
            <div class="detail-value">{{ room.name }}</div>
        </div>
        
        <div class="detail-group">
            <div class="detail-label">Date d'arrivée:</div>
            <div class="detail-value">{{ reservation.checkIn|date("d/m/Y") }}</div>
        </div>
        
        <div class="detail-group">
            <div class="detail-label">Date de départ:</div>
            <div class="detail-value">{{ reservation.checkOut|date("d/m/Y") }}</div>
        </div>
        
        <div class="detail-group">
            <div class="detail-label">Nombre de nuits:</div>
            <div class="detail-value">{{ numberOfNights }}</div>
        </div>
        
        <div class="detail-group">
            <div class="detail-label">Nombre de personnes:</div>
            <div class="detail-value">{{ room.capacity }}</div>
        </div>
        
        <div class="detail-group">
            <div class="detail-label">Montant total:</div>
            <div class="detail-value">{{ reservation.totalPrice|number_format(2, ',', ' ') }}€</div>
        </div>
        
        <div class="detail-group">
            <div class="detail-label">Numéro de réservation:</div>
            <div class="detail-value">RES-{{ reservation.id|format("%05d") }}</div>
        </div>
    </div>
    
    <div class="invoice-download">
        <h3>Facture disponible</h3>
        <p>Votre facture a été générée automatiquement</p>
        {% if invoicePath %}
            <a href="{{ invoicePath }}" target="_blank" class="btn btn-primary">
                <i class="bi bi-file-earmark-pdf"></i> Télécharger la facture
            </a>
        {% else %}
            <p class="alert alert-warning">La facture n'est pas encore disponible, veuillez réessayer ultérieurement.</p>
        {% endif %}
    </div>
    
    <div class="confirmation-actions">
        <a href="index.php?page=dashboard" class="btn btn-primary">
            <i class="bi bi-person-circle"></i> Mon compte
        </a>
        <a href="index.php?page=rooms" class="btn btn-secondary">
            <i class="bi bi-house-door"></i> Retour à l'accueil
        </a>
    </div>
</div>

<script>
    // Notification de succès
    document.addEventListener('DOMContentLoaded', function() {
        // Si vous avez un système de notification, vous pouvez l'activer ici
    });
</script>
{% endblock %}