{% extends "base.html.twig" %}
{% block title %}
	{{ parent() }}
	Modifier une chambre
{% endblock %}
{% block content %}
	<div class="container-fluid">
		<div class="row justify-content-center">
			<div class="col-12 col-md-6 align-items-center">
				<h1 class="text-center text-primary fw-bold m-2">Modifier une
					chambre</h1>
				<form method="POST">
					<input chambre="hidden" value="{{chambre.num_chambre}}" name="num_chambre" class="form-control">
					<input chambre="text" value="{{chambre.disponibilite}}" name="disponibilite" class="form-control">
                    <input chambre="text" value="{{chambre.id_photos}}" name="id_photos" class="form-control">
                    <input chambre="text" value="{{chambre.prix}}" name="prix" class="form-control">
					<div class="text-center">
						<input type="submit" value="Modifier" class="btn btn-
						primary m-2">
					</div>
				</form>
			</div>
		</div>
	</div>
{% endblock %}