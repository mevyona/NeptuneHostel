{% extends "base.html.twig" %}
{% block title %}
    {{ parent() }}
    Modifier Utilisateur
{% endblock %}
{% block content %}

{% if session.message is defined and session.message %}
    {% set messageClass = session.success is defined and session.success ? 'success' : 'error' %}
    <div class="alert alert-info {{ messageClass }}">{{ session.message }}</div>
    {% set session = session|merge({'message': null, 'success': null}) %}
{% endif %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <h1 class="text-center text-primary fw-bold m-2">Modification d'Utilisateur</h1>
                
                <div class="card mb-4">
                    <div class="card-header">
                        <h3>Informations Personnelles</h3>
                    </div>
                    <div class="card-body">
                        <form method="POST" action="index.php?page=updateUser">
                            <input type="hidden" name="id" value="{{ user.id }}">
                            
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="first_name" class="form-label">Prénom</label>
                                        <input type="text" class="form-control" id="first_name" name="first_name" 
                                               value="{{ user.firstName }}" required>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="last_name" class="form-label">Nom</label>
                                        <input type="text" class="form-control" id="last_name" name="last_name" 
                                               value="{{ user.lastName }}" required>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="email" class="form-label">Email</label>
                                        <input type="email" class="form-control" id="email" name="email" 
                                               value="{{ user.email }}" required>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="phone" class="form-label">Téléphone</label>
                                        <input type="text" class="form-control" id="phone" name="phone" 
                                               value="{{ user.phone }}">
                                    </div>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <label for="role" class="form-label">Rôle</label>
                                <select class="form-select" id="role" name="role">
                                    <option value="client" {% if user.role == 'client' %}selected{% endif %}>Client</option>
                                    <option value="staff" {% if user.role == 'staff' %}selected{% endif %}>Personnel</option>
                                    <option value="admin" {% if user.role == 'admin' %}selected{% endif %}>Administrateur</option>
                                </select>
                            </div>
                            
                            <div class="d-flex justify-content-between mt-4">
                                <a href="index.php?page=showUser&id={{ user.id }}" class="btn btn-secondary">Annuler</a>
                                <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
                            </div>
                        </form>
                    </div>
                </div>
                
                {% if user.reservations is defined and user.reservations is not empty %}
                    <div class="card mb-4">
                        <div class="card-header">
                            <h3>Réservations</h3>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Chambre</th>
                                            <th>Arrivée</th>
                                            <th>Départ</th>
                                            <th>Statut</th>
                                            <th>Total</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for reservation in user.reservations %}
                                            <tr>
                                                <td>{{ reservation.id }}</td>
                                                <td>{{ reservation.room_name ?? reservation.room_id }}</td>
                                                <td>{{ reservation.check_in|date('d-m-Y') }}</td>
                                                <td>{{ reservation.check_out|date('d-m-Y') }}</td>
                                                <td>
                                                    {% if reservation.status == 'confirmed' %}
                                                        <span class="badge bg-success">Confirmée</span>
                                                    {% elseif reservation.status == 'pending' %}
                                                        <span class="badge bg-warning">En attente</span>
                                                    {% elseif reservation.status == 'cancelled' %}
                                                        <span class="badge bg-danger">Annulée</span>
                                                    {% else %}
                                                        <span class="badge bg-secondary">{{ reservation.status }}</span>
                                                    {% endif %}
                                                </td>
                                                <td>{{ reservation.total_price }}€</td>
                                                <td>
                                                    <a href="index.php?page=viewReservation&id={{ reservation.id }}" class="btn btn-sm btn-info">Voir</a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                {% endif %}
                
                {% if user.reviews is defined and user.reviews is not empty %}
                    <div class="card mb-4">
                        <div class="card-header">
                            <h3>Avis</h3>
                        </div>
                        <div class="card-body">
                            <div class="list-group">
                                {% for review in user.reviews %}
                                    <div class="list-group-item">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h5 class="mb-1">Note: {{ review.rating }}/5</h5>
                                            <small>{{ review.created_at|date('d-m-Y') }}</small>
                                        </div>
                                        <p class="mb-1">{{ review.comment }}</p>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                {% endif %}
                
                {% if user.notifications is defined and user.notifications is not empty %}
                    <div class="card mb-4">
                        <div class="card-header">
                            <h3>Notifications</h3>
                        </div>
                        <div class="card-body">
                            <div class="list-group">
                                {% for notification in user.notifications %}
                                    <div class="list-group-item">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h5 class="mb-1">{{ notification.title }}</h5>
                                            <small>{{ notification.created_at|date('d-m-Y') }}</small>
                                        </div>
                                        <p class="mb-1">{{ notification.message }}</p>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}