{% extends "base.html.twig" %}
{% block title %}
    {{ parent() }}
    Profil Utilisateur
{% endblock %}
{% block content %}

{% if session.message is defined and session.message %}
    {% set messageClass = session.success is defined and session.success ? 'success' : 'error' %}
    <div class="alert alert-info {{ messageClass }}">{{ session.message }}</div>
    {% set session = session|merge({'message': null, 'success': null}) %}
{% endif %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <h1 class="text-center text-primary fw-bold m-2">Mon Profil</h1>
                
                <div class="card mb-4">
                    <div class="card-header">
                        <h3>Informations Personnelles</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Nom:</strong> {{ user.fullName }}</p>
                                <p><strong>Email:</strong> {{ user.email }}</p>
                                <p><strong>Téléphone:</strong> {{ user.phone ?? 'Non renseigné' }}</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Rôle:</strong> 
                                    {% if user.role == 'admin' %}
                                        <span class="badge bg-danger">Administrateur</span>
                                    {% elseif user.role == 'staff' %}
                                        <span class="badge bg-warning">Personnel</span>
                                    {% else %}
                                        <span class="badge bg-info">Client</span>
                                    {% endif %}
                                </p>
                                <p><strong>Membre depuis:</strong> {{ user.createdAt|date('j F Y') }}</p>
                            </div>
                        </div>
                        <div class="mt-3">
                            <a href="index.php?page=updateUser&id={{ user.id }}" class="btn btn-primary">Modifier Profil</a>
                            <a href="index.php?page=changePassword&id={{ user.id }}" class="btn btn-warning">Changer Mot de Passe</a>
                            <a href="index.php?page=logout" class="btn btn-danger">Déconnexion</a>
                        </div>
                    </div>
                </div>
                
                {% if user.reservations is not empty %}
                    <div class="card mb-4">
                        <div class="card-header">
                            <h3>Mes Réservations</h3>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Chambre</th>
                                            <th>Arrivée</th>
                                            <th>Départ</th>
                                            <th>Statut</th>
                                            <th>Total</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for reservation in user.reservations %}
                                            <tr>
                                                <td>{{ reservation.id }}</td>
                                                <td>{{ reservation.room_id }}</td>
                                                <td>{{ reservation.check_in }}</td>
                                                <td>{{ reservation.check_out }}</td>
                                                <td>{{ reservation.status }}</td>
                                                <td>{{ reservation.total_price }}€</td>
                                                <td>
                                                    <a href="index.php?page=viewReservation&id={{ reservation.id }}" class="btn btn-sm btn-info">Voir</a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                {% endif %}
                
                {% if user.reviews is not empty %}
                    <div class="card mb-4">
                        <div class="card-header">
                            <h3>Mes Avis</h3>
                        </div>
                        <div class="card-body">
                            <div class="list-group">
                                {% for review in user.reviews %}
                                    <div class="list-group-item">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h5 class="mb-1">Note: {{ review.rating }}/5</h5>
                                            <small>{{ review.created_at|date('d-m-Y') }}</small>
                                        </div>
                                        <p class="mb-1">{{ review.comment }}</p>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                {% endif %}
                
                {% if user.notifications is not empty %}
                    <div class="card mb-4">
                        <div class="card-header">
                            <h3>Notifications</h3>
                        </div>
                        <div class="card-body">
                            <div class="list-group">
                                {% for notification in user.notifications %}
                                    <div class="list-group-item">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h5 class="mb-1">{{ notification.title }}</h5>
                                            <small>{{ notification.created_at|date('d-m-Y') }}</small>
                                        </div>
                                        <p class="mb-1">{{ notification.message }}</p>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}