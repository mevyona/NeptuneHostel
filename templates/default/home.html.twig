{% extends "base.html.twig" %}

{% block title %} {{ parent() }} Accueil {% endblock %}

{% block css %} 
    {{ parent() }} 
    <link rel='stylesheet' href='css/home.css'>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
{% endblock %}

{% block content %}
    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-image-container">
            <img class="hero-image" src="images/accueil.png" alt="Hôtel Neptune">
            <div class="hero-overlay"></div>
        </div>
        <div class="hero-content">
            <h1 class="hero-title">Bienvenue à l'Hôtel Neptune</h1>
            <p class="hero-subtitle">Une expérience unique où luxe et confort se rencontrent</p>
            <div class="hero-actions">
                <a href="index.php?page=rooms" class="primary-button">
                    <span>Découvrir nos chambres</span>
                    <i class="bi bi-arrow-right"></i>
                </a>
                <a href="#about" class="secondary-button">En savoir plus</a>
            </div>
        </div>
        <div class="scroll-indicator">
            <a href="#about">
                <i class="bi bi-chevron-down"></i>
            </a>
        </div>
    </section>

    <!-- About Section -->
    <section id="about" class="about-section">
        <div class="container">
            <div class="section-header">
                <span class="section-tag">Notre histoire</span>
                <h2 class="section-title">L'hôtel Neptune</h2>
                <div class="section-divider"></div>
            </div>
            <div class="about-content">
                <div class="about-text">
                    <p>L'Hôtel Neptune vous invite à découvrir un havre de sérénité alliant confort, élégance et service personnalisé. Que vous soyez en voyage d'affaires ou en quête de détente, notre établissement vous propose des chambres spacieuses et chaleureusement décorées, dotées de toutes les commodités modernes.</p>
                    <p>Profitez de notre atmosphère conviviale et laissez-vous séduire par notre emplacement privilégié à proximité des principales attractions de la région. Chaque séjour à l'Hôtel Neptune est une expérience unique où bien-être et hospitalité se rencontrent.</p>
                </div>
                <div class="about-stats">
                    <div class="stat-item">
                        <span class="stat-number">{{ roomStats.total }}</span>
                        <span class="stat-label">Chambres</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number">{{ roomStats.yearsOfExperience }}</span>
                        <span class="stat-label">Années d'expérience</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number">{{ roomStats.averageRating|number_format(1) }}</span>
                        <span class="stat-label">Note moyenne</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="features-section">
        <div class="container">
            <div class="features-grid">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-geo-alt"></i>
                    </div>
                    <h3 class="feature-title">Emplacement idéal</h3>
                    <p class="feature-text">À deux pas des principaux sites touristiques et du centre-ville historique.</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-cup-hot"></i>
                    </div>
                    <h3 class="feature-title">Petit-déjeuner gourmet</h3>
                    <p class="feature-text">Produits frais et locaux, servis dans notre restaurant panoramique.</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-wifi"></i>
                    </div>
                    <h3 class="feature-title">WiFi haut débit</h3>
                    <p class="feature-text">Connectivité gratuite dans tout l'établissement pour tous nos clients.</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-water"></i>
                    </div>
                    <h3 class="feature-title">Espace bien-être</h3>
                    <p class="feature-text">Sauna, hammam et salle de fitness à votre disposition 7j/7.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Gallery Preview -->
    <section class="gallery-section">
        <div class="container">
            <div class="section-header">
                <span class="section-tag">Découvrir</span>
                <h2 class="section-title">Un aperçu de nos chambres</h2>
                <div class="section-divider"></div>
            </div>
            
            {% if featuredRooms and featuredRooms|length > 0 %}
                <div class="gallery-grid">
                    {% for room in featuredRooms %}
                        <div class="gallery-item {% if loop.first %}large{% endif %}">
                            {% if room.featuredImage %}
                                <img src="{{ room.featuredImage.filePath }}" alt="Chambre {{ room.name }}">
                            {% else %}
                                <img src="images/chambres/{{ room.name|lower }}.png" alt="Chambre {{ room.name }}">
                            {% endif %}
                            <div class="gallery-overlay">
                                <span>Chambre {{ room.name }} - {{ room.price }}€/nuit</span>
                            </div>
                            <a href="index.php?page=showRoom&id={{ room.id }}" class="gallery-link"></a>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="no-rooms-message">
                    <p>Aucune chambre disponible pour le moment. Veuillez revenir plus tard.</p>
                </div>
            {% endif %}
            
            <div class="gallery-action">
                <a href="index.php?page=rooms" class="primary-button">
                    <span>Voir toutes nos chambres</span>
                    <i class="bi bi-grid"></i>
                </a>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section">
        <div class="container">
            <div class="cta-content">
                <h2 class="cta-title">Prêt à réserver votre séjour de rêve?</h2>
                <p class="cta-text">Profitez de nos tarifs préférentiels en réservant directement sur notre site.</p>
                <div class="cta-buttons">
                    <a href="index.php?page=rooms" class="primary-button">
                        <span>Réserver maintenant</span>
                        <i class="bi bi-calendar-check"></i>
                    </a>
                    <a href="tel:+33123456789" class="secondary-button">
                        <i class="bi bi-telephone"></i>
                        <span>Nous contacter</span>
                    </a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascript %}
    <script>
        // Script pour rendre les éléments de la galerie cliquables
        document.addEventListener('DOMContentLoaded', function() {
            const galleryItems = document.querySelectorAll('.gallery-item');
            galleryItems.forEach(item => {
                item.addEventListener('click', function() {
                    const link = this.querySelector('.gallery-link');
                    if (link) {
                        window.location.href = link.getAttribute('href');
                    }
                });
            });
        });
    </script>
{% endblock %}