{% extends "base.html.twig" %}

{% block title %} {{ parent() }} Confirmation de réservation {% endblock %}

{% block css %}
    {{ parent() }}
    <link rel="stylesheet" href="css/reservation/confirmation.css">
{% endblock %}

{% block content %}
<div class="confirmation-container">
    <div class="confirmation-header">
        <div class="success-icon">
            <i class="bi bi-check-circle-fill"></i>
        </div>
        <h1>Réservation confirmée !</h1>
        <p>Merci pour votre réservation à l'Hôtel Neptune.</p>
    </div>

    <div class="reservation-details">
        <h2>Détails de votre séjour</h2>
        
        <div class="details-card">
            <div class="detail-row">
                <span class="detail-label">Numéro de réservation:</span>
                <span class="detail-value">#{{ reservation.id }}</span>
            </div>
            
            <div class="detail-row">
                <span class="detail-label">Chambre:</span>
                <span class="detail-value">{{ room.name }}</span>
            </div>
            
            <div class="detail-row">
                <span class="detail-label">Dates:</span>
                <span class="detail-value">Du {{ reservation.check_in|date("d/m/Y") }} au {{ reservation.check_out|date("d/m/Y") }}</span>
            </div>
            
            <div class="detail-row">
                <span class="detail-label">Durée:</span>
                <span class="detail-value">{{ reservation.number_of_nights }} nuit(s)</span>
            </div>
            
            <div class="detail-row">
                <span class="detail-label">Montant total:</span>
                <span class="detail-value">{{ reservation.total_price|number_format(2, ',', ' ') }}€</span>
            </div>
            
            <div class="detail-row">
                <span class="detail-label">Statut:</span>
                <span class="detail-value status-{{ reservation.status }}">{{ reservation.status|capitalize }}</span>
            </div>
        </div>

        <!-- Bouton de téléchargement de facture -->
        <div class="invoice-download">
            <a href="index.php?page=downloadInvoice&id={{ reservation.id }}" class="btn-invoice" target="_blank">
                <i class="bi bi-file-earmark-pdf"></i> Télécharger votre facture
            </a>
        </div>
    </div>

    <div class="hotel-info">
        <div class="info-item">
            <i class="bi bi-geo-alt"></i>
            <div>
                <h3>Adresse</h3>
                <p>Hôtel Neptune<br>
                   2 Rue du Dépôt<br>
                   8200 France</p>
            </div>
        </div>
        
        <div class="info-item">
            <i class="bi bi-telephone"></i>
            <div>
                <h3>Contact</h3>
                <p>Téléphone: 06 00 00 00 00<br>
                   Email: contact@neptune-hotel.fr</p>
            </div>
        </div>
    </div>

    <div class="actions">
        <a href="index.php?page=dashboard" class="btn btn-primary">
            <i class="bi bi-person-circle"></i> Voir mes réservations
        </a>
        <a href="index.php" class="btn btn-outline">
            <i class="bi bi-house-door"></i> Retour à l'accueil
        </a>
    </div>
</div>
{% endblock %}